public class Peon {
    Pieza piezaPeon;

    public Peon(Pieza piezaPeon) {
        this.piezaPeon = piezaPeon;
    }

    //Si la posicion de la pieza sumado a una o dos filas es igual entonces es verdadero
    public boolean movimientoValido(Posicion posicionDestino) {
        boolean movimientoValido;

        if (piezaPeon.getPosicionPieza().fila + 1 == posicionDestino.fila
                || (piezaPeon.getPosicionPieza().fila == 2 && piezaPeon.getPosicionPieza().fila + 2 == posicionDestino.fila)
                || (piezaPeon.getPosicionPieza().fila == 7 && piezaPeon.getPosicionPieza().fila + 2 == posicionDestino.fila)) {
            movimientoValido = true;
        } else {
            movimientoValido = false;
        }
        return movimientoValido;
    }
}
